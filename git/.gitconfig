[user]
        name = Simone Di Marco
        email = simone.dimarco@cyberdyne.it
[alias]
        ch = checkout
        co = commit
        rb = rebase
        lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
        st = status
        pu = pull --rebase
        ru = remote update
        su = submodule update --recursive
        sr = submodule update --remote
        si = submodule update --init
[color]
        ui = true
        branch = auto
        diff = auto
        status = auto
[color "branch"]
        current = yellow reverse
        local = yellow
        remote = green
[color "diff"]
        meta = yellow bold
        frag = magenta bold
        old = red bold
        new = green bold
[color "status"]
        added = yellow
        changed = green
        untracked = cyan
[core]
        editor = vim
        excludesfile = ~/.gitignore
[status]
        submodulesummary = 1
[diff]
        submodule = log
